<%= render "mobile/menu" %>

<div class="container-fluid">
    <% if @series.length > 0 %>
        <% @series.each do |serie| %>
            <div class="row serie">

                <div class="players">
                    <div class="col-xs-5 player1"><%= serie.player1 %></div>
                    <div class="col-xs-2 vs">vs</div>
                    <div class="col-xs-5 player2"><%= serie.player2 %></div>
                </div>
                <div class="score-box">
                    <div class="col-xs-5 player1"><%= serie.player1_score %></div>
                    <div class="col-xs-2"></div>
                    <div class="col-xs-5 player2"><%= serie.player2_score %></div>
                </div>

                <div class="name"><%= serie.name; %></div>
                <time datetime="<%= serie.start_date_utc; %>" data-title="true" title="<%= serie.start_date; %>">
                    <%= serie.start_date; %>
                </time>
            </div>
        <% end %>
    <% else %>
        <p>There are currently no series played.</p>
    <% end %>
</div>
